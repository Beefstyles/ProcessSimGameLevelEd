<Window x:Class="ProcessSimLevelEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProcessSimLevelEditor"
        xmlns:dc="GridHelper"
        mc:Ignorable="d"
        Title="MainWindow" Height="367" Width="530">

    <Window.Resources>
        <Style x:Key="TextBoxStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Width" Value="55.0"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>

        <Style x:Key="MinorHeading" TargetType="{x:Type TextBlock}">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

    </Window.Resources>
    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <StackPanel>
                <TextBlock HorizontalAlignment="Center">ProcessSim Game Level Editor V0.1</TextBlock>
            </StackPanel>
        </DockPanel>

        <DockPanel Dock="Left">
            <ScrollViewer IsTabStop="True" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <WrapPanel Orientation="Horizontal">
                        <TextBlock>Methane</TextBlock>
                        <TextBox Name="Methane" AcceptsReturn="True" TextWrapping="Wrap" TextChanged="ComponentTextBoxChange" PreviewTextInput="NunberValTextBox" Style="{StaticResource TextBoxStyle}"></TextBox>
                    </WrapPanel>
                    <WrapPanel>
                        <TextBlock>Ethane</TextBlock>
                        <TextBox Name="Ethane" AcceptsReturn="True" TextWrapping="Wrap" TextChanged="ComponentTextBoxChange" PreviewTextInput="NunberValTextBox" Style="{StaticResource TextBoxStyle}"></TextBox>
                    </WrapPanel>
                    <WrapPanel>
                        <TextBlock>Propane</TextBlock>
                        <TextBox Name="Propane" AcceptsReturn="True" TextWrapping="Wrap" TextChanged="ComponentTextBoxChange" PreviewTextInput="NunberValTextBox" Style="{StaticResource TextBoxStyle}"></TextBox>
                    </WrapPanel>
                    <WrapPanel>
                        <TextBlock>NButane</TextBlock>
                        <TextBox Name="NButane" AcceptsReturn="True" TextWrapping="Wrap" TextChanged="ComponentTextBoxChange" PreviewTextInput="NunberValTextBox" Style="{StaticResource TextBoxStyle}"></TextBox>
                    </WrapPanel>
                    <WrapPanel>
                        <TextBlock>IButane</TextBlock>
                        <TextBox Name="IButane" AcceptsReturn="True" TextWrapping="Wrap" TextChanged="ComponentTextBoxChange" PreviewTextInput="NunberValTextBox" Style="{StaticResource TextBoxStyle}"></TextBox>
                    </WrapPanel>
                    <WrapPanel>
                        <TextBlock>NPentane</TextBlock>
                        <TextBox Name="NPentane" AcceptsReturn="True" TextWrapping="Wrap" TextChanged="ComponentTextBoxChange" PreviewTextInput="NunberValTextBox" Style="{StaticResource TextBoxStyle}"></TextBox>
                    </WrapPanel>
                    <WrapPanel>
                        <TextBlock>IPentane</TextBlock>
                        <TextBox Name="IPentane" AcceptsReturn="True" TextWrapping="Wrap" TextChanged="ComponentTextBoxChange" PreviewTextInput="NunberValTextBox" Style="{StaticResource TextBoxStyle}"></TextBox>
                    </WrapPanel>
                    <WrapPanel>
                        <TextBlock>Hexane</TextBlock>
                        <TextBox Name="Hexane" AcceptsReturn="True" TextWrapping="Wrap" TextChanged="ComponentTextBoxChange" PreviewTextInput="NunberValTextBox" Style="{StaticResource TextBoxStyle}"></TextBox>
                    </WrapPanel>
                    <WrapPanel>
                        <TextBlock>Benzene</TextBlock>
                        <TextBox Name="Benzene" AcceptsReturn="True" TextWrapping="Wrap" TextChanged="ComponentTextBoxChange" PreviewTextInput="NunberValTextBox" Style="{StaticResource TextBoxStyle}"></TextBox>
                    </WrapPanel>
                    <WrapPanel>
                        <TextBlock>Heptane</TextBlock>
                        <TextBox Name="Heptane" AcceptsReturn="True" TextWrapping="Wrap" TextChanged="ComponentTextBoxChange" PreviewTextInput="NunberValTextBox" Style="{StaticResource TextBoxStyle}"></TextBox>
                    </WrapPanel>
                    <WrapPanel>
                        <TextBlock>Octane</TextBlock>
                        <TextBox Name="Octane" AcceptsReturn="True" TextWrapping="Wrap" TextChanged="ComponentTextBoxChange" PreviewTextInput="NunberValTextBox" Style="{StaticResource TextBoxStyle}"></TextBox>
                    </WrapPanel>
                    <WrapPanel>
                        <TextBlock>Nonane</TextBlock>
                        <TextBox Name="Nonane" AcceptsReturn="True" TextWrapping="Wrap" TextChanged="ComponentTextBoxChange" PreviewTextInput="NunberValTextBox" Style="{StaticResource TextBoxStyle}"></TextBox>
                    </WrapPanel>
                    <WrapPanel>
                        <TextBlock>Decane</TextBlock>
                        <TextBox Name="Decane" AcceptsReturn="True" TextWrapping="Wrap" TextChanged="ComponentTextBoxChange" PreviewTextInput="NunberValTextBox" Style="{StaticResource TextBoxStyle}"></TextBox>
                    </WrapPanel>
                    <WrapPanel>
                        <TextBlock>Water</TextBlock>
                        <TextBox Name="Water" AcceptsReturn="True" TextWrapping="Wrap" TextChanged="ComponentTextBoxChange" PreviewTextInput="NunberValTextBox" Style="{StaticResource TextBoxStyle}"></TextBox>
                    </WrapPanel>
                    <WrapPanel>
                        <TextBlock>Nitrogen</TextBlock>
                        <TextBox Name="Nitrogen" AcceptsReturn="True" TextWrapping="Wrap" TextChanged="ComponentTextBoxChange" PreviewTextInput="NunberValTextBox" Style="{StaticResource TextBoxStyle}"></TextBox>
                    </WrapPanel>
                    <WrapPanel>
                        <TextBlock>CO2</TextBlock>
                        <TextBox Name="CO2" AcceptsReturn="True" TextWrapping="Wrap" TextChanged="ComponentTextBoxChange" PreviewTextInput="NunberValTextBox" Style="{StaticResource TextBoxStyle}"></TextBox>
                    </WrapPanel>
                    <WrapPanel>
                        <TextBlock>H2S</TextBlock>
                        <TextBox Name="H2S" AcceptsReturn="True" TextWrapping="Wrap" TextChanged="ComponentTextBoxChange" PreviewTextInput="NunberValTextBox" Style="{StaticResource TextBoxStyle}"></TextBox>
                    </WrapPanel>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
        <StackPanel DockPanel.Dock="Right" HorizontalAlignment="Left">
            <TextBlock Style="{StaticResource MinorHeading}">Input Values</TextBlock>
            <WrapPanel Orientation="Horizontal">
                <TextBlock>Temp</TextBlock>
                <TextBox AcceptsReturn="True" TextWrapping="Wrap" Name="Temperature" IsReadOnly="True" Style="{StaticResource TextBoxStyle}"></TextBox>
            </WrapPanel>
            <WrapPanel Orientation="Horizontal">
                <TextBlock>Pressure</TextBlock>
                <TextBox AcceptsReturn="True" TextWrapping="Wrap" Name="Pressure" IsReadOnly="True" Style="{StaticResource TextBoxStyle}"></TextBox>
            </WrapPanel>
            <WrapPanel Orientation="Horizontal">
                <TextBlock>XGrid</TextBlock>
                <TextBox AcceptsReturn="True" TextWrapping="Wrap" Name="XGrid" IsReadOnly="True" Style="{StaticResource TextBoxStyle}"></TextBox>
            </WrapPanel>
            <WrapPanel Orientation="Horizontal">
                <TextBlock>YGrid</TextBlock>
                <TextBox AcceptsReturn="True" TextWrapping="Wrap" Name="YGrid" IsReadOnly="True" Style="{StaticResource TextBoxStyle}"></TextBox>
            </WrapPanel>
            <TextBlock Style="{StaticResource MinorHeading}">Caclulated Values</TextBlock>
            <WrapPanel Orientation="Horizontal">
                <TextBlock>TotalFlow</TextBlock>
                <TextBox AcceptsReturn="True" TextWrapping="Wrap" Name="TotalFlowCalc" IsReadOnly="True" Style="{StaticResource TextBoxStyle}"></TextBox>
            </WrapPanel>
            <WrapPanel Orientation="Horizontal">
                <TextBlock>Phase</TextBlock>
                <TextBox AcceptsReturn="True" TextWrapping="Wrap" Name="PhaseCalc" IsReadOnly="True" Style="{StaticResource TextBoxStyle}"></TextBox>
            </WrapPanel>
        </StackPanel>
        <StackPanel>
            <DataGrid Name ="gameGrid" CanUserAddRows="False" Height="281" local:GridHelper.RowCount="6">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="1"/>
                    <DataGridTextColumn Header="2"/>
                    <DataGridTextColumn Header="3"/>
                    <DataGridTextColumn Header="4"/>
                    <DataGridTextColumn Header="5"/>
                    <DataGridTextColumn Header="6"/>
                    <DataGridTextColumn Header="7"/>
                    <DataGridTextColumn Header="8"/>
                    <DataGridTextColumn Header="9"/>
                    <DataGridTextColumn Header="10"/>
                </DataGrid.Columns>
            </DataGrid>
            <DockPanel DockPanel.Dock="Bottom">
                <Button HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="CalculateValues" Margin="5">Calculate Values</Button>
            </DockPanel>
        </StackPanel>
    </DockPanel>
</Window>
